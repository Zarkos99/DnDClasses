<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:background="@color/gray"
        tools:context=".MainActivity">

        <!--    Back button -->
        <Button
            android:id="@+id/back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:background="@drawable/button_style"
            android:paddingStart="10sp"
            android:paddingEnd="10sp"
            android:layout_marginStart="20sp"
            android:textColorHint="@color/white"
            android:layout_gravity="start"
            android:gravity="center"
            android:textSize="30sp"
            android:hint="Return"
            android:height="60sp" />

        <ImageView
            android:id="@+id/class_image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />

        <!-- Class Name text -->
        <TextView
            android:id="@+id/textview_class_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="40sp" />

        <!-- Class Hit Die text -->
        <TextView
            android:id="@+id/textview_class_hit_die"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:gravity="center_vertical"
            android:textColor="@color/white"
            android:textSize="30sp" />

        <!-- Class Can Spellcast text -->
        <TextView
            android:id="@+id/textview_class_can_spellcast"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:gravity="center_vertical"
            android:textColor="@color/white"
            android:textSize="30sp" />

        <!-- Class Description text -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:gravity="center_vertical"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:text="@string/description_label" />

        <TextView
            android:id="@+id/textview_class_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:gravity="center_vertical"
            android:textColor="@color/white"
            android:textSize="20sp" />
    </LinearLayout>
</ScrollView>